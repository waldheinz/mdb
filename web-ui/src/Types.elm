
module Types (
    -- * Persons
    PersonId, Person, WithPersons,

    -- * Albums
    AlbumId, Album,

    -- * Files
    FileId, File
    ) where

import Dict exposing ( Dict )

------------------------------------------------------------------------------------------------------------------------
-- Persons
------------------------------------------------------------------------------------------------------------------------

type alias PersonId = Int

type alias Person =
    { name : String
    }

type alias WithPersons a =
    { a
    | persons   : Dict PersonId Person
    }

------------------------------------------------------------------------------------------------------------------------
-- Albums
------------------------------------------------------------------------------------------------------------------------

type alias AlbumId = Int

type alias Album =
    { name : String }

------------------------------------------------------------------------------------------------------------------------
-- Files
------------------------------------------------------------------------------------------------------------------------

type alias FileId = Int

type alias File =
    { path      : String
    , size      : Int
    , mimeType  : String
    }
