<apply template="default">
    <person>
        <h2><name/></h2>
        <div class="row">
            <div class="col-xs-4">
                <img class="img-thumbnail" src="/image/person/${id}">
            </div>
        </div>
    </person>

    <h2>Random Files</h2>

    <div class="row">
        <files>
            <div class="col-xs-2">
                <a href="#" class="thumbnail">
                    <img src="/image/thumbnail/${id}">
                </a>
            </div>
        </files>
    </div>
</apply>
