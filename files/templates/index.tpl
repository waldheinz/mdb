<apply template="default">
    <h2>Persons</h2>
    <div class="row">
        <persons>
            <div class="col-xs-3">
                <a href="/person/${id}" class="thumbnail">
                    <img src="/image/person/${id}">
                    <div class="caption">
                        <h3><name /></h3>
                    </div>
                </a>
            </div>
        </persons>
    </div>
</apply>
